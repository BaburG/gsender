.wizardWrapper {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: white;
  width: 90%;
  height: 400px;
  border-radius: 10px 10px 10px 10px;
  display: flex;
  flex-direction column;
  overflow hidden;
}

.wizardContent {
  display flex;
  flex-direction row;
  gap: 1rem;
  justify-items stretch;
  align-items stretch;
  justify-content stretch
  flex-grow 1;
}

.wizardTitle {
  border-bottom: solid 1px #9ca3af;
  padding: 10px 10px;

  h1 {
    padding: 0;
    margin: 0;
    font-size: 1.2rem;
    color: #4b5563;
    font-weight: bold;
  }
}

.stepperWrapper {
  width: 30%;
  background-color: #e5e7eb;
  border-left: solid 1px #9ca3af;
  padding: 10px;
  display flex;
  flex-direction column;

  h2 {
    padding: 0;
    margin: 0;
    font-size: 1.2rem;
  }
}

.instructionWrapper {
  width: 70%;
  padding: 10px;
  display flex;
  flex-direction column;
  justify-content space-between;
}


.step {
  display: flex;
  flex-direction row;
  padding: 1rem;
  gap: 1rem;
  border: solid 1px #e5e7eb;
  align-items  center;
  &-active {
    @extends .step;
    background: #FFFFFF;
    border: solid 1px #9ca3af;
  }
}

.stepIndex {
  background: none;
  border: solid 1px #9ca3af;
  border-radius 9999px;
  display flex;
  align-items center;
  justify-content center;
  align-content center
  width: 2.5rem;
  height: 2.5rem;
  color: #9ca3af;
  font-weight: bold;
  font-size: 1.1rem;

  &-complete {
    @extends .stepIndex;
    color: #FFFFFF;
    background: #059669;
    border: solid 1px #059669;
  }

  &-active {
    @extends .stepIndex;
    color: #3e85c7;
    border: solid 1px #3e85c7;
    //background: #3e85c7;
  }
}

.hidden {
  display: none;
}

.instructionTitle {
  padding: 0;
  margin: 0;
  font-size: 1.4rem;
}

.stepText {
  display: flex;
  flex-direction column;
}

.stepTitle {
  color: #059669;
  font-weight: bold;

  &-active {
    @extends .stepTitle;
    color: #295d8d;
  }

  &-future {
    @extends .stepTitle;
    color: #4b5563;
  }
}

.stepperDescription {
  color: #9ca3af;
  font-weight: bold;
  font-size: 1.2rem;

  &-active {
    color: #3e85c7;
    font-weight: bold;
    font-size: 1.2rem;
  }
}


.substeps {
  display: flex;
  flex-direction column;
  gap: 2rem;
  padding: 1rem;
}

.substep {
  display: flex;
  flex-direction column;
  margin-botttom: 2rem;
  padding: 0 1rem;
}

.substepTitle {
  color: #4b5563;
  font-weight: bold;
}

.substepDescription {
  color: #9ca3af;
}


.controls {
  display flex;
  flex-direction row;
  align-content center
  justify-content space-around;
  gap: 2rem;
}


.stepButtonBase {
  padding: 1rem 1.33rem;
  color: white;
  border-radius: .25rem;
  border: solid 1px rgba(209, 213, 219, 1);
  min-width: 12rem;

  i {
    margin: 0 10px !important;
  }
}

button-mixin($color) {
  @extend .stepButtonBase;
  background-color: rgba($color, .8);
  --tw-shadow: 0 10px 15px -3px rgba(0, 0, 0, .1), 0 4px 6px -2px rgba(0, 0, 0, .05);
  box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);
  transition: 150ms ease-in-out;

  &:disabled {
    $disabled-color = rgba($color, .5);
    background-color: $disabled-color;
    color: rgba(black, .2);
  }

  &:not(:disabled):hover {
    background-color: darken($color, 30%);
    transition: 150ms ease-in-out;
  }
}

.stepButton {
  button-mixin(#3e85c7);
  &-inverted {
    button-mixin(#3e85c7);
    color: #3e85c7;
    border: solid 1px #3e85c7;
    background: none;
  }
}
