{
    "compilerOptions": {
        "target": "ES2021",
        "useDefineForClassFields": true,
        "lib": ["ES2021", "DOM", "DOM.Iterable", "esnext"],
        "module": "ESNext",
        // "module": "CommonJS",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "incremental": true,
        "allowJs": true,
        /* Bundler mode */
        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "strictNullChecks": false, // this is so we can assign variables as null before defining them
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,

        "typeRoots": ["./node_modules/@types", "./src/declarations.d.ts"],
        "baseUrl": ".",
        "paths": {
            "app/*": ["src/*"]
        }
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "vite.config.ts",
        "declaration.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.cjs",
        "**/*.mjs"
    ],
    "exclude": ["output"]
    // "references": [{ "path": "./tsconfig.node.json" }]
}
